/* pages/find/detail/index.wxss */
.page{
  width: 100%;
  overflow-x: hidden;
}
.textarea{
  border: none;
  min-height: 200rpx;
  max-height: 250px;
  overflow-y: scroll;
}
form{
  clear: both;
  overflow: hidden;
}
.content-section{
  background-color:#f6f7f8;
  margin:5px;
  border-radius:8px;
  padding-bottom: 0
}
.bottom-section{
  padding: 0 5px;
  margin-top: 15px;
}
.submit-btn{
  border-radius: 0;
  /* position: absolute; */
  /* bottom: 0; */
  width:100%;
  margin-top: 15px;
}
.location{
  line-height:20px;
  position:relative;
  /* bottom:55px; */
  width: 100%;
  height: 20px;
}
.location image{
  width: 18px;
  height: 18px;
  position: absolute;
  top: 1px;
}
.location text{
  position: absolute;
  left: 22px;
  font-size: 14px;
}
.poem-item{
  display: block;
}
.poem-item view{
  width:100%;
  display: block;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.poem-item .poem-title{
  color: #333;
  font-size: 14px;
}
.poem-item .poem-author{
  color: #999;
  font-size: 12px;
  padding: 2px 0;
}
.poem-item .poem-content{
  font-size: 12px;
  color: #454545;
}
.poet-item{
  display: block;
}
.poet-item view{
  width:100%;
  display: block;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.poet-item .poem-title{
    color: #333;
    font-size: 14px;
}
.poet-item .poem-profile{
    color: #666;
    font-size: 12px;
}
.poet-item .poem-title:first-child{
    overflow: inherit;
}
.poet-item .poem-author{
    color: #999;
    font-size: 12px;
    display: inline-block;
    overflow: inherit;
    /* padding: 5px 0; */
}
.hidden-section{
  display: none;
}
.pinSection{
  padding-bottom: 8px
}
.pin-item{
  line-height: 22px;
  padding: 5px 15px;
}
.pin-item .pin-title{
  /* display: inline-block; */
  font-weight: bold;
  width: auto;
}
.pin-item .pin-content{
  /* display: inline-block; */
  /* padding-left: 10px; */
  line-height: 22px;
  /* width:auto; */
   text-overflow:ellipsis;
  -webkit-line-clamp: 5;
}
.pin-section{
  margin-top: 0;
  background-color: #fff;
}