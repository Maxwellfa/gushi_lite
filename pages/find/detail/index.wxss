/* pages/find/detail/index.wxss */
.textarea{
  border: none;
  min-height: 200rpx;
}
form{
  clear: both;
  overflow: hidden;
}
.content-section{
  background-color:#f6f7f8;
  margin:5px;
  border-radius:8px;
  padding-bottom: 0
}
.bottom-section{
  padding: 0 5px;
  margin-top: 15px;
}
.submit-btn{
  border-radius: 0;
  /* position: absolute; */
  /* bottom: 0; */
  width:100%;
  margin-top: 15px;
}
.location{
  line-height:20px;
  position:relative;
  /* bottom:55px; */
  width: 100%;
  height: 20px;
}
.location image{
  width: 18px;
  height: 18px;
  position: absolute;
  top: 1px;
}
.location text{
  position: absolute;
  left: 22px;
  font-size: 14px;
}
.poem-item{
  display: block;
}
.poem-item view{
  width:100%;
  display: block;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.poem-item .poem-title{
  color: #333;
  font-size: 14px;
}
.poem-item .poem-author{
  color: #999;
  font-size: 12px;
  padding: 2px 0;
}
.poem-item .poem-content{
  font-size: 12px;
  color: #454545;
}