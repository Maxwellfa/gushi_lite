<!--pages/poem/detail/index.wxml-->
<view class="page panel">
    <view class="page__hd">
        <view class="page__title">{{poem.title}}</view>
        <view class="page__desc">{{(author.dynasty ? author.dynasty : poem.dynasty)+' | '}}<navigator url='../../poet/detail/index?id={{poem.author_id}}' class="author-name">{{(author.author_name ? author.author_name : poem.author)}}</navigator></view>
    </view>
    <view class="page__bd">
        <view class="weui-panel">
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__desc" wx:if="{{content.xu}}">{{content.xu}}</view>
                    <view class="weui-media-box__title" wx:if="{{content.content.length>0}}" wx:for="{{content.content}}" wx:key="unique">{{item}}</view>
                     <view class="weui-media-box__info badge-list" wx:if="{{tags.length>0}}"> 
                         <view class="weui-badge" wx:for="{{tags}}" wx:key="unique">{{item}}</view>
                     </view> 
                </view>
            </view>
        </view>
        <view class='title'>创作背景</view>
        <text class='poem-bg'>{{poem.background}}</text>
    </view>
</view>
<button class='share' open-type="share"><image src='../../../images/icon/share.png'></image></button>
